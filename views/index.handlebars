<div class="container">
  <h2>Eat Da Burgers!</h2>
  <div class="row">
    <div class="col-md-5">
      <ul id="notEaten">
        {{#each burgers}}
          {{#unless devoured}}
            <li>
              {{burger_name}}
              <button class="change-devour" id="{{id}}" data-id="{{id}}" data-name="{{burger_name}}">
                Devour it!
              </button>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-5">
      <h4>Devoured Burgers!</h2>

      <ul id="devoured">
        {{#each burgers}}
          {{#if devoured}}
            <li>{{burger_name}}</li>
          {{/if}}
        {{/each}}
      </ul>

    </div>
  </div>



  <form class="create-form">

    <div class="form-group">
      <label id="label" for="name">New burger Name:</label>
      <input type="text" id="name" name="name">
      <button type="submit" class="add">Add Burger</button>
    </div>

  </form>
</div>

